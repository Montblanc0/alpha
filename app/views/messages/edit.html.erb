<%= turbo_frame_tag dom_id(@message, "content") do %>
  <%= form_with(model: @message, method: :patch, class: "column is-narrow", autocomplete: 'off') do |form| %>
    <div class="field">
      <div class="control">
        <%= form.text_area :content, maxlength: 255, cols: 40, rows: 3, class: "textarea"%>
      </div>
    </div>
    <div class="field is-grouped is-grouped-centered">
      <div class="control">
        <%= link_to "Cancel", @message, class: "button is-pretty" %>
      </div>
      <div class="control">
        <%= form.submit "Update", class: "button is-green is-pretty has-text-weight-bold" %>
      </div>
    </div>
  <% end %>
<% end %>
<div class="buttons is-centered mt-4">

  <%=
   link_to_unless(request.referrer.nil?, "Back", :back, class: "button is-pretty") do
     link_to("Back", messages_url, class: "button is-pretty")
   end 
   %>
</div>
