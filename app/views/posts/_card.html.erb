<div class="column is-half" id="<%= dom_id post %>">
  <div class="card">
    <div class="card-image">
      <figure class="image is4by3">
        <% if post.image? %>
          <%= link_to image_tag(post.image_url :card), post %>
        <% else %>
          <%= link_to image_tag('houston.jpeg'), post %>
        <% end %>
      </figure>
    </div>
    <div class="card-content">
      <%= link_to user_path(post.user), class: 'has-text-weight-bold' do %>
        @<%= post.user.username %>
      <% end %>
      <% if post.caption? %>
        <%= post.caption %>
      <% end %>
    </div>
  </div>
</div>
