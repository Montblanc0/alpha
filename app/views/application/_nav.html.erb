<nav class="navbar is-fixed-top is-spaced is-transparent" data-controller="nav">
  <div class="container is-max-desktop">
    <%# Nav logo and burger icon %>
    <div class="navbar-brand">
      <div id="nav-left-wrapper" class="is-flex">
        <a class="navbar-burger">
          <span></span>
          <span></span>
          <span></span>
        </a>
        <span class="navbar-item" id="logo"><%= link_to 'Alpha', root_path %></span>
      </div>
      <%# Mobile buttons %>
      <% if current_user %>
        <span class="is-flex mobile-user-icons">
          <%= link_to current_user, class: "navbar-item is-hidden-desktop", "data-turbo-stream": "get" do %>
            <span class="icon is-medium">
              <i class="fa-solid fa-user-astronaut"></i>
            </span>
          <% end %>

          <%= link_to logout_path, class: "navbar-item is-hidden-desktop", "data-turbo-stream": "get" do %>
            <span class="icon is-medium">
              <i class="fa-solid fa-right-from-bracket"></i>
            </span>
          <% end %>
        </span>
      <% else %>
        <%= link_to login_path, class: "navbar-item is-hidden-desktop", "data-turbo-stream": "get" do %>
          <span class="icon is-medium">
            <i class="fa-solid fa-right-to-bracket"></i>
          </span>
        <% end %>
      <% end %>
    </div>
    <%# Main menu %>
    <div class="navbar-menu">
      <div class="navbar-start">
        <%= link_to posts_path, class: 'navbar-item has-text-centered' do %>
          <span class="icon is-medium">
            <i class="fa-regular fa-image"></i>
          </span>
          <span>Posts</span>
        <% end %>
        <%= link_to messages_path, class: 'navbar-item has-text-centered' do %>
          <span class="icon is-medium">
            <i class="fa-regular fa-note-sticky"></i>
          </span>
          <span>Messages</span>
        <% end %>
        <a class="navbar-item has-text-centered" href="/nasa">
          <span class="icon is-medium">
            <i class="fas fa-meteor"></i>
          </span>
          <span>NASA</span>
        </a>
      </div>
      <%# Desktop dropdown %>
      <div class="navbar-end is-hidden-touch">
        <% if current_user %>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link">
              <%= current_user %>
            </a>
            <div class="navbar-dropdown is-boxed is-right">
              <%= link_to 'Profile', current_user, class: "navbar-item" %>
              <%= link_to 'Logout', logout_path, class: "navbar-item" %>
            </div>
          </div>
        <% else %>
          <div class="navbar-item">
            <div class="buttons">
              <%= link_to 'Sign up', :signup, class: 'button is-red has-text-weight-bold' %>
              <%= link_to 'Log in', :login, class: 'button is-light has-text-weight-bold', "data-turbo-stream": "get" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>
<%# Pusher %>
<div class="pusher"></div>
