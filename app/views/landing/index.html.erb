<div class="landing" data-controller="landing">

  <section id="sec1" class="columns is-mobile is-vcentered is-multiline is-flex-direction-column">
    <article class="has-text-centered columns is-8 is-flex-direction-column p-3">
      <div id="welcome" class="card">
        <div class="column">
          <h1 class="title">Welcome to <span id="highlight">outer space</span>!</h1>
        </div>
        <div class="column">
          <p class="subtitle"><span id="site-name">Alpha</span> is a platform to gather all space fans from across the universe.<br>
            <%= link_to 'Join the community', signup_path, class: 'is-hover-red' %> and start sharing amazing pictures!</p>
        </div>
        <%= link_to '#sec2', id: 'city-scroll' do %>
          <div class="column is-flex is-justify-content-center">
            <div id="city" class="card">
              <p class="subtitle">Scroll down for a tour</p>
            </div>
          </div>
        <% end %>
      </div>
    </article>
    <div class="scroll"><a href="#sec2"><span></span>Scroll</a>
    </div>
  </section>

  <section id="sec2" class="columns is-mobile is-vcentered is-multiline is-flex-direction-column">
    <article class="has-text-centered columns is-8 is-flex-direction-column p-3">
      <div class="card">
        <div class="column">
          <h2 class="title"><%= link_to 'Post a picture!', posts_path, class: 'is-hover-red' %></h2>
        </div>
        <div class="column">
          <p class="subtitle">
            You can either upload one yourself or enter a link.</p>
        </div>
        <%= link_to posts_path do %>
          <div class="column is-flex is-justify-content-space-around">
            <div class="is-animated hidden-landing leftToRight card">
              <%= image_tag 'new_post_1', class: 'image is-fullwidth' %>
            </div>
            <div class="is-animated is-second hidden-landing leftToRight card is-hidden-mobile">
              <%= image_tag 'new_post_2', class: 'image is-fullwidth' %>
            </div>
          </div>
        <% end %>
      </div>
    </article>
    <div class="scroll"><a href="#sec3"><span></span>Scroll</a>
    </div>
  </section>

  <section id="sec3" class="columns is-mobile is-vcentered is-multiline is-flex-direction-column">
    <article class="has-text-centered columns is-8 is-flex-direction-column p-3">
      <div class="card">
        <div class="column">
          <h2 class="title"><%= link_to 'Say hello!', messages_path, class: 'is-hover-red' %></h2>
        </div>
        <div class="column">
          <p class="subtitle">
            Chat with other users in real time. You can also edit your messages!</p>
        </div>
        <%= link_to messages_path do %>
          <div class="column is-flex is-justify-content-space-around">
            <div class="is-animated hidden-landing leftToRight card">
              <%= image_tag 'new_msg_1', class: 'image is-fullwidth' %>
            </div>
            <div class="is-animated is-second hidden-landing leftToRight card is-hidden-mobile">
              <%= image_tag 'new_msg_2', class: 'image is-fullwidth' %>
            </div>
          </div>
        <% end %>
      </div>
    </article>
    <div class="scroll"><a href="#sec4"><span></span>Scroll</a>
    </div>
  </section>

  <section id="sec4" class="columns is-mobile is-vcentered is-multiline is-flex-direction-column">
    <article class="has-text-centered columns is-8 is-flex-direction-column p-3">
      <div class="card">
        <div class="column">
          <h2 class="title"><%= link_to 'Visit space!', nasa_path, class: 'is-hover-red' %></h2>
        </div>
        <div class="column">
          <p class="subtitle">
            Get daily astronomical pictures from NASA and share them!</p>
        </div>
        <%= link_to nasa_path do %>
          <div class="column is-flex is-justify-content-space-around">
            <div class="is-animated hidden-landing leftToRight card">
              <%= image_tag 'nasa_1', class: 'image is-fullwidth' %>
            </div>
            <div class="is-animated  is-second hidden-landing leftToRight card is-hidden-mobile">
              <%= image_tag 'nasa_2', class: 'image is-fullwidth' %>
            </div>
          </div>
        <% end %>
      </div>
    </article>
    <div class="scroll"><a href="#sec5"><span></span>Scroll</a>
    </div>
  </section>

