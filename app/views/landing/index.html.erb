          </div>
        </div>
        <div class="column p-0">
          <div class="logo is-animated hidden-landing bottomUp is-third">
            <a href="https://bulma.io/"  target="_blank" id="bulma">
              <%= image_tag 'bulma.png', class:"image is-fullwidth" %>
            </a>
          </div>
        </div>
        <div class="column p-0">
          <div id="heart-container" class="icon-text is-animated is-last hidden-landing bottomUp">

            <span class="title is-size-2">...and </span>
            <span id="heart" class="icon is-large">
              <i class="fa-solid fa-heart"></i>
            </span>

          </div>
        </div>
        <div class="mt-2"></div>
      </div>
